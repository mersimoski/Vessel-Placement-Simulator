@namespace BlazorApp.Features.VesselPlacement.Components.VesselList

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h3 class="mb-0">Available Vessels</h3>
        <small class="text-muted">Drag to place â€¢ Double-click to rotate</small>
    </div>
    <div class="vessel-list-container">
        <div class="vessel-grid">
            @if (HasVessels)
            {
                @foreach (var vessel in SortedVessels)
                {
                    <DraggableVessel
                        @key="@vessel.Id"
                        Vessel="@vessel"
                        OnRotate="HandleVesselRotate"
                        AnchorageWidth="@AnchorageWidth"
                        AnchorageHeight="@AnchorageHeight"
                        GridElementId="@GridElementId"
                        BorderColor="@GetVesselColor(vessel.Id)" />
                }
            }
            else
            {
                <p class="text-muted">No vessels available</p>
            }
        </div>
    </div>
</div>
